{
  "mappings": {
    "properties": {
      "createdTimestamp":  { "type": "date"  },
      "line" : {
        "type" :  "text",
        "analyzer" : "text_analyzer"
      }
    }
  },

  "settings": {
    "analysis": {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "english_keywords": {
          "type":       "keyword_marker",
          "keywords":   ["example"]
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },

        "ascii_folding" : {
          "type" : "asciifolding",
          "preserve_original" : true
        }
      },
      "analyzer": {
        "text_analyzer": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "ascii_folding",
            "english_stop",
            "english_keywords",
            "english_stemmer"
          ]
        }
      }
    }
  }
}